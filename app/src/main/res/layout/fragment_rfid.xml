<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarHeader"
        layout="@layout/x_header_bar" />

    <LinearLayout
        android:id="@+id/linearHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="@color/colorHeader"
        android:paddingTop="2dp">

        <TextView
            style="@style/textNomalHeader"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="Hour" />

        <TextView
            style="@style/textNomalHeaderRFID"
            android:text="Checksum" />

        <TextView
            style="@style/textNomalHeaderRFID"
            android:text="No checksum" />
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <mq.com.chuohapps.customview.LoadMoreRecyclerView
            android:id="@+id/listRFID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtCPUtime" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>