<?xml version="1.0" encoding="utf-8"?><!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:orientation="vertical">--><!--id, name, factory, amount, unit, date;-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/materialNumber"
        style="@style/TextSmallOrder"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorTextPrimaryBold" />

    <View style="@style/LineDivideHorizontal" />

    <TextView
        android:id="@+id/materialID"
        style="@style/TextSmallOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textStyle="bold" />

    <View style="@style/LineDivideHorizontal" />

    <TextView
        android:id="@+id/materialName"
        style="@style/TextSmallOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="" />

    <View style="@style/LineDivideHorizontal" />

    <TextView
        android:id="@+id/materialFactory"
        style="@style/TextSmallOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="" />

    <View style="@style/LineDivideHorizontal" />

    <TextView
        android:id="@+id/materialAmount"
        style="@style/TextSmallOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textStyle="bold" />

    <View style="@style/LineDivideHorizontal" />

    <TextView
        android:id="@+id/materialUnit"
        style="@style/TextSmallOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textStyle="bold" />

    <View style="@style/LineDivideHorizontal" />

    <TextView
        android:id="@+id/materialDate"
        style="@style/TextSmallOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text=""
        android:textStyle="bold" />
</LinearLayout>
