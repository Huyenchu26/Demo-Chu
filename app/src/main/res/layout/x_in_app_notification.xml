<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="?attr/selectableItemBackground"
        android:transitionName="imageContent1"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageContent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/button_login" />

        <ImageView
            android:id="@+id/imageCompanyLogo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/imageContent"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imageContent"
            android:src="@drawable/button_login" />

        <TextView
            android:id="@+id/textCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageCompanyLogo"
            android:layout_alignTop="@id/imageCompanyLogo"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imageCompanyLogo"
            android:gravity="center_vertical"
            android:paddingRight="8dp"
            android:text="Company Name"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp" />

        <TextView
            android:id="@id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imageCompanyLogo"
            android:layout_below="@id/imageCompanyLogo"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="8dp"
            android:text="This is title"
            android:textColor="@color/colorTextPrimary"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imageCompanyLogo"
            android:layout_below="@id/textTitle"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:paddingRight="8dp"
            android:text="This is content This is content This is content This is content"
            android:textColor="@color/colorTextSecondary"
            android:textSize="15dp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/textSeeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiáº¿t"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/imageContent"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>