    </style>
    <style name="LineDivideHorizontal">
        <item name="android:background">@color/colorLineDivideDark</item>
        <item name="android:layout_width">0.7dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="imageViewHome">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
    </style>

