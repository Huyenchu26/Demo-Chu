<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBackGroundTableRow</item>
        <item name="android:windowBackground">@drawable/bg_button_home_normal</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/bg_button_home_normal</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="LoadingTheme" parent="android:Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NewLoadingTheme">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditBase">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/bg_edittext_nomal</item>
        <item name="android:textColorHint">@color/colorTextPrimaryBold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">27dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="EditSingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/bg_edittext_nomal</item>
        <item name="android:textColorHint">@color/colorTextPrimaryBold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">23dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="EditTextLogin" parent="EditBase">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">@dimen/_230sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextNomal" parent="EditBase">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/bg_edittext_nomal</item>
        <item name="android:textColorHint">@color/colorTextPrimaryBold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditQuantityDialog" parent="EditBase">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="ButtonBase">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">27dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="ButtonNormal">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:textColorHint">@color/colorTextWhiteSecond</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">27dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextNomal">
        <item name="android:textSize">27dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextTotal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">22dp</item>
    </style>
    <style name="ButtonTextHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="EditQuantity">
        <item name="android:textSize">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextSmallOrder">
        <item name="android:textSize">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
