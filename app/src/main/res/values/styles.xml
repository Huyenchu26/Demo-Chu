        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextSmallsub">
        <item name="android:textSize">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorTextPrimaryBold</item>
    </style>

    <style name="TextSmallSub">
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/colorTextPrimaryBold</item>
    </style>
    <style name="TextSmallBold">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#01579B</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="TextHome">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TextHomeDescription">
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">@color/colorTextWhiteSecond</item>
        <item name="android:maxLines">4</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:paddingRight">@dimen/_6sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LineDivideVertical">
        <item name="android:background">@color/colorLineDivide</item>
